@using Habit_App_Models.ViewModels;
@model HomeCreateVM
<div class="card">
    <div class="row">
        <div class="col-12 text-center">
            <h2 class="text-white py-2">Create @Model.HabitName Record</h2>
        </div>
        <div class="card-body">
            <form method="post" class="row">
                <input asp-for="HabitId" hidden />
                <input asp-for=UserId hidden />
                <div class="form-floating py-2 col-12">
                    <input asp-for=HabitName readonly class="border-0 shadow form-control" />
                    <label asp-for=HabitName class=" ms-2"></label>

                    
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for=MeasurementUnit class="border-0 shadow form-control" />
                    <label asp-for=MeasurementUnit class=" ms-2"></label>

                    <span asp-validation-for="MeasurementUnit" class="text-danger"></span>
                </div>
                @* <div class="form-floating py-2 col-12">
                    <input asp-for= class="border-0 shadow form-control" />
                    <label asp-for= class=" ms-2"></label>

                    <span asp-validation-for="" class="text-danger"></span>
                </div> *@
                <button type="submit" class="btn btn-primary form-control">Add Record</button>
            </form>
        </div>

    </div>



    @section scripts{
        @{
            <partial name="_ValidationScriptsPartial" />
        }
    }
